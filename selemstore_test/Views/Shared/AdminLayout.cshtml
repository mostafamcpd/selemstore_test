<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - لوحة التحكم</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { font-family: 'Tajawal', sans-serif; direction: rtl; text-align: right; background-color: #f8f9fa; }
        .sidebar { width: 250px; height: 100vh; background-color: #343a40; color: white; position: fixed; padding: 20px; }
        .sidebar a { color: white; text-decoration: none; display: block; padding: 10px; border-radius: 5px; }
        .sidebar a:hover { background-color: #495057; }
        .content { margin-right: 270px; padding: 20px; }
        .navbar { background-color: #007bff !important; }
        .navbar-brand, .nav-link { color: white !important; }
        .footer { background: #343a40; color: white; text-align: center; padding: 15px; position: fixed; bottom: 0; width: 100%; }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="text-center">لوحة التحكم</h4>
        <a href="/Admin/Dashboard">الرئيسية</a>
        <a href="/Admin/Users">إدارة المستخدمين</a>
        <a href="/Admin/Products">إدارة المنتجات</a>
        <a href="/Admin/Orders">الطلبات</a>
        <a href="/Admin/Settings">الإعدادات</a>
        <hr>
        <a href="/Account/Logout" class="text-danger">تسجيل الخروج</a>
    </div>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Admin/Dashboard">لوحة التحكم</a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="content">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer">
        &copy; @DateTime.Now.Year - لوحة تحكم الأدمن
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
